{

  "suggest.minTriggerInputLength": 5,
  "suggest.lowPrioritySourceLimit": 3,
  "suggest.highPrioritySourceLimit": 10,
  "suggest.languageSourcePriority": 95,

  "snippets.shortcut": "S",
  "snippets.priority": 98,
  "emmet.priority": 90,

  "coc.source.around.enable": true,
  "coc.source.around.shortcut": "A",
  "coc.source.around.priority": 55,
  "coc.source.buffer.enable": true,
  "coc.source.buffer.shortcut": "B",
  "coc.source.buffer.priority": 50,
  "coc.source.file.priority": 99,

  "emmet.showExpandedAbbreviation": "always",
  "emmet.excludeLanguages": [
    "markdown",
    "plaintext"
  ],
  "emmet.includeLanguages": {
    "php":"html",
    "html":"css"
  },
  "emmet.optimizeStylesheetParsing": true,
  "emmet.syntaxProfiles": {
    "php": "html"
  },

  "snippets.autoTrigger": true,
  "suggest.snippetsSupport": true,
  "snippets.ultisnips.enable":true,
  "snippets.extends": {
    "php":[ "html", "css", "javascript", "sql" ],
    "html":[ "css", "javascript" ]
  },

  "languageserver": {

    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }

  }

}
